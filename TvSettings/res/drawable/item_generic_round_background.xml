<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false" android:drawable="@android:color/transparent">
	</item>
    
	<!-- Pressed -->
	<item android:state_pressed="true" android:drawable="@drawable/menu_second_press_toshiba">
		<!-- <shape android:shape="rectangle">
			<solid android:color="#4CF3B356"/>
		    <corners android:radius="5dp" />

		    <stroke android:width="1dp" android:color="@android:color/transparent" />
		</shape> -->
	</item>
	<!-- Focused -->
	<item android:state_focused="true" android:drawable="@drawable/menu_second_focus_toshiba">
		<!-- <shape android:shape="rectangle">
			<solid android:color="#4CF3B356"/>
		    <corners android:radius="5dp" />

		    <stroke android:width="1dp" android:color="@android:color/transparent" />
		</shape> -->
	</item>
	<!-- Selected -->
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<solid android:color="#4CF3B356"/>
		    <corners android:radius="5dp" />

		    <stroke android:width="1dp" android:color="#FFFFFF" />
		</shape>
	</item>
	<!-- Hovered -->
	<item android:state_hovered="true">
		<shape android:shape="rectangle">

			<solid android:color="#4CF3B356"/>
		    <corners android:radius="5dp" />

		    <stroke android:width="1dp" android:color="#FFFFFF" />
		</shape>
	</item>
	<!-- Default -->
	<item android:drawable="@android:color/transparent"></item>

</selector>