<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- press -->
	<item android:state_enabled="false" android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/darker_gray" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="#a00099cc" />
		</shape>
	</item>
	<!-- activated -->
	<item android:state_activated="true" android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/darker_gray" />
		</shape>
	</item>
	<item android:state_activated="true">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/holo_green_dark" />
		</shape>
	</item>
	<!-- focus -->
	<item android:state_enabled="false" android:state_focused="true">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/darker_gray" />
		</shape>
	</item>
	
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<solid android:color="#400099cc" />

			<stroke android:width="2dp" android:color="@android:color/holo_blue_dark" />
		</shape>
	</item>
	<!-- select -->
	<item android:state_selected="true">
		<shape android:shape="rectangle">
		    <stroke android:width="2dp" android:color="@android:color/holo_blue_dark" />

		    <solid android:color="#400099cc" />
		</shape>
	</item>
	<!-- check -->
	<item android:state_checked="true" android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/darker_gray" />
		</shape>
	</item>
	<item android:state_checked="true">
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />

			<stroke android:width="2dp" android:color="@android:color/holo_blue_dark" />
		</shape>
	</item>
	<!-- defuault -->
	<item android:drawable="@android:color/transparent"></item>

</selector>