    <LinearLayout
        android:layout_width="360.0px"
        android:layout_height="270.0px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chidrenmode_code_background1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_marginTop="10.0px"
            android:layout_marginLeft="20.0px"
            android:text="@string/tcl_timedate_setting"
            android:textColor="#FFF6921E"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_marginTop="20.0px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0px"
                android:layout_gravity="center"
                android:text="@string/date_setting"
                android:textColor="#ffffff"
                android:textSize="10.0sp" />

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="200.0px"
                android:layout_height="30.0px"
                android:layout_marginLeft="20.0px"
                android:layout_gravity="center"
                android:background="@drawable/edittext_button_selector"
                android:orientation="horizontal" >
                <EditText
                    android:id="@+id/year"
                    android:layout_width="50.0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10.0px"
                    android:maxLength="4"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="9.0sp"
                    android:textColor="#ffffff"
                    android:background="@null" />

                <TextView
                    android:layout_width="20.0px"
                    android:layout_height="30.0px"
                    android:gravity="top"
                    android:text="@string/line1"
                    android:textSize="9.0sp" />

                <EditText
                    android:id="@+id/month"
                    android:layout_width="22.0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="9.0sp"
                    android:textColor="#ffffff"
                    android:background="@null" />

                <TextView
                    android:layout_width="20.0px"
                    android:layout_height="30.0px"
                    android:gravity="top"
                    android:layout_marginLeft="10.0px"
                    android:text="@string/line1"
                    android:textSize="9.0sp" />
                <EditText
                    android:id="@+id/day"
                    android:layout_width="22.0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="9.0sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout           
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_marginTop="30.0px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0px"
                android:layout_gravity="center"
                android:text="@string/time_setting"
                android:textColor="#ffffff"
                android:textSize="10.0sp" />

            <LinearLayout
                android:id="@+id/time"
                android:layout_width="200.0px"
                android:layout_height="30.0px"
                android:layout_marginLeft="20.0px"
                android:layout_gravity="center"
                android:background="@drawable/edittext_button_selector"
                android:orientation="horizontal" >
                <EditText
                    android:id="@+id/hour"
                    android:layout_width="22.0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"    
                    android:singleLine="true"  
                    android:ellipsize="end"              
                    android:layout_marginLeft="10.0px"
                    android:textSize="9.0sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
               
               <TextView
                    android:layout_width="20.0px"
                    android:layout_height="30.0px"
                    android:gravity="top"
                    android:layout_marginLeft="10.0px"
                    android:text="@string/line2"
                    android:textSize="9.0sp" />

                <EditText
                    android:id="@+id/minute"
                    android:layout_width="22.0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="9.0sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="30.0px"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/timeConfirm"
                android:layout_width="120.0px"
                android:layout_height="35.0px"
                android:layout_marginLeft="20.0px"
                android:background="@drawable/btn_selector"
                android:text="@string/children_confirm"
                android:textColor="@color/btn_text_color"
                android:textSize="7.5sp" />

            <Button
                android:id="@+id/timeCancel"
                android:layout_width="120.0px"
                android:layout_height="35.0px"
                android:layout_marginLeft="60.0px"
                android:background="@drawable/btn_selector"
                android:text="@string/children_cancel"
                android:textColor="@color/btn_text_color"
                android:textSize="7.5sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
