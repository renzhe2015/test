<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Pane.Dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_title"
        style="@style/Widget.Tv.TextView.Title"
        android:text="@string/STRING_RESET_TV" />

    <TextView
        android:id="@+id/text_message"
        style="@style/Widget.Tv.TextView.Message"
        android:layout_width="match_parent"
        android:layout_height="0.0px"
        android:layout_weight="1"
        android:text="@string/STRING_RESET_TV_INFO" />

    <LinearLayout
        style="@style/Pane.ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_cancel"
            style="@style/Widget.Tv.ButtonBarButton"
            android:text="@android:string/cancel" >

            <requestFocus />
        </Button>

        <Button
            android:id="@+id/button_ok"
            style="@style/Widget.Tv.ButtonBarButton"
            android:text="@android:string/ok" />
    </LinearLayout>

</LinearLayout>
