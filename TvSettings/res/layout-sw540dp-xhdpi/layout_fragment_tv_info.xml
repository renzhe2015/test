<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <LinearLayout
	android:id="@+id/container_right_top"
	android:layout_width="256px" android:layout_height="175px"
	android:gravity="center" android:orientation="vertical"
	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"
	android:background="@drawable/infobar_background">

	<TextView android:layout_width="fill_parent" 
	    android:id="@+id/atv_dialog_colzero" 
	    android:gravity="center"
		android:textColor="#FFEBEBEB" 
		android:textSize="40px" 
		android:layout_height="wrap_content">
	    
	</TextView>
	
	<TextView android:layout_width="fill_parent" 
	    android:id="@+id/atv_dialog_colOne" 
	    android:gravity="center"
		android:textColor="#FFEBEBEB" 
		android:textSize="40px" 
		android:layout_height="wrap_content">
	    
	</TextView>
	
	<TextView android:layout_width="fill_parent" 
	    android:id="@+id/atv_dialog_colTwo"  
	    android:gravity="center"
		android:textColor="#FF787878" 
		android:textSize="28px" 
		android:layout_height="wrap_content">
	    
	</TextView>
</LinearLayout>


  <LinearLayout
        
		android:id="@+id/container_middle"
        android:layout_width="730px"
        android:layout_height="220px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35px"
        android:background="@drawable/dtv_infobar_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dtv_infobar_channel_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textColor="#FFEBEBEB"
                android:textSize="32px" 
                android:layout_marginLeft="30px"/>

            <com.tsb.tv.fragment.RollText
                android:id="@+id/dtv_infobar_channel_name"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:gravity="left|center"
                android:textColor="#FFEBEBEB"
                android:textSize="27px" 
                android:ellipsize="marquee"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/dtv_info_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:paddingRight="27px"
                android:textColor="#FFEBEBEB"
                android:textSize="25px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.tsb.settings.fragment.RollText
                android:id="@+id/dtv_infobar_program_name"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:gravity="center"
                android:textColor="#FFEBEBEB"
                android:textSize="42px" 
                android:ellipsize="marquee"
                android:singleLine="true"
                />

            <com.tsb.settings.fragment.CustomProgessBar
                android:id="@+id/dtv_infobar_program_play_position_bar"
                android:layout_width="510px"
                android:layout_height="11px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="98px" />

            <TextView
                android:id="@+id/dtv_infobar_program_start_time"
                android:layout_width="76px"
                android:layout_height="30px"
                android:layout_marginLeft="27px"
                android:layout_marginTop="90px"
                android:textColor="#FFD8D8D8"
                android:textSize="19px" />

            <TextView
                android:id="@+id/dtv_infobar_program_end_time"
                android:layout_width="76px"
                android:layout_height="30px"
                android:layout_marginLeft="625px"
                android:layout_marginTop="88px"
                android:gravity="right|center"
                android:textColor="#FFD8D8D8"
                android:textSize="19px" />

            <TextView
                android:layout_width="140px"
                android:layout_height="40px"
                android:textColor="#FF8E8E8E"
                android:textSize="24px" 
                android:layout_marginTop="120px"
                android:layout_marginLeft="27px"
                android:text="@string/play_later"
                />
            
            <com.tsb.settings.fragment.RollText
                android:id="@+id/dtv_infobar_next_program_info"
                android:layout_width="245px"
                android:layout_height="70px"
                android:layout_marginTop="110px"
                android:layout_marginLeft="167px"
                android:gravity="left|center"
                android:textColor="#FFD8D8D8"
                android:textSize="27px"
                android:ellipsize="marquee"
                android:singleLine="true"
                />
            
            <TextView
                android:id="@+id/dtv_infobar_soundtrack_info"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="127px"
                android:singleLine="true"
                android:textColor="#FFD8D8D8"
                android:textSize="18px" 
                android:gravity="right"
                android:layout_alignParentRight="true"
                />
           <TextView
                android:id="@+id/dtv_infobar_sound_lang_info"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_marginRight="12px"
                android:layout_marginTop="127px"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#FFD8D8D8"
                android:textSize="18px" 
                android:layout_toLeftOf="@id/dtv_infobar_soundtrack_info"
                />
            <com.tsb.settings.fragment.CustomProgessBar
                android:id="@+id/dtv_infobar_intensity_bar"
                android:layout_width="55px"
                android:layout_height="20px"
                android:layout_toLeftOf="@id/dtv_infobar_sound_lang_info"
                android:layout_marginRight="12px"
                android:layout_marginTop="130px" />
            
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
