       <TextView
        android:id="@+id/text_title"
        android:layout_width="172px"
        android:layout_height="wrap_content"
        android:textSize="33px"
        android:textColor="@color/layout_text_color"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:ellipsize="marquee"
        android:paddingLeft="0px"/>
        
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_item_setting_left" 
		android:layout_marginLeft="49px"/>

    <TextView
        android:id="@+id/text_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:gravity="center_horizontal"
        android:text="@null"
        android:textColor="@color/layout_text_color"
        android:textSize="33px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_item_setting_right" 
		android:layout_marginRight="10px"/>

</LinearLayout>