    <LinearLayout
        android:layout_width="540px"
        android:layout_height="405px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chidrenmode_code_background1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_marginTop="15px"
            android:layout_marginLeft="30px"
            android:text="@string/tcl_timedate_setting"
            android:textColor="#FFF6921E"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_marginTop="30px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_gravity="center"
                android:text="@string/date_setting"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="300px"
                android:layout_height="45px"
                android:layout_marginLeft="30px"
                android:layout_gravity="center"
                android:background="@drawable/edittext_button_selector"
                android:orientation="horizontal" >
                <EditText
                    android:id="@+id/year"
                    android:layout_width="75px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="15px"
                    android:maxLength="4"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:background="@null" />

                <TextView
                    android:layout_width="30px"
                    android:layout_height="45px"
                    android:gravity="top"
                    android:text="@string/line1"
                    android:textSize="13.5sp" />

                <EditText
                    android:id="@+id/month"
                    android:layout_width="33px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:background="@null" />

                <TextView
                    android:layout_width="30px"
                    android:layout_height="45px"
                    android:gravity="top"
                    android:layout_marginLeft="15px"
                    android:text="@string/line1"
                    android:textSize="13.5sp" />
                <EditText
                    android:id="@+id/day"
                    android:layout_width="33px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout           
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_marginTop="45px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_gravity="center"
                android:text="@string/time_setting"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/time"
                android:layout_width="300px"
                android:layout_height="45px"
                android:layout_marginLeft="30px"
                android:layout_gravity="center"
                android:background="@drawable/edittext_button_selector"
                android:orientation="horizontal" >
                <EditText
                    android:id="@+id/hour"
                    android:layout_width="33px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"    
                    android:singleLine="true"  
                    android:ellipsize="end"              
                    android:layout_marginLeft="15px"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
               
               <TextView
                    android:layout_width="30px"
                    android:layout_height="45px"
                    android:gravity="top"
                    android:layout_marginLeft="15px"
                    android:text="@string/line2"
                    android:textSize="13.5sp" />

                <EditText
                    android:id="@+id/minute"
                    android:layout_width="33px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLength="2"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="45px"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/timeConfirm"
                android:layout_width="180px"
                android:layout_height="52.5px"
                android:layout_marginLeft="30px"
                android:background="@drawable/btn_selector"
                android:text="@string/children_confirm"
                android:textColor="@color/btn_text_color"
                android:textSize="11.25sp" />

            <Button
                android:id="@+id/timeCancel"
                android:layout_width="180px"
                android:layout_height="52.5px"
                android:layout_marginLeft="90px"
                android:background="@drawable/btn_selector"
                android:text="@string/children_cancel"
                android:textColor="@color/btn_text_color"
                android:textSize="11.25sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
