<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1050px"
    android:layout_height="600px"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="675px"
        android:background="@drawable/system_pop_frame_bg"
        android:layout_gravity="center"
        android:orientation="vertical">
        
        <TextView
        android:id="@+id/boot_source_signal_title"
        android:layout_width="900px"
        android:layout_height="75px"        
        android:layout_marginLeft="45px"
        android:layout_marginTop="3px"
        android:textColor="@color/TextItemSelectedColor"
        android:textSize="30sp"
        android:text="@string/tcl_about_tv" >
    </TextView>
        
    <RelativeLayout 
        android:layout_width="900px"
        android:layout_height="75px"        
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/txt1"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/white_color"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        android:text="@string/tcl_serial_No" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt2"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"  
	        android:layout_marginTop="22.5px"
	        android:layout_weight="1"
	        android:visibility="invisible" >

	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt_serial"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/text_unfocus"
	        android:textSize="13.5sp"
	        android:layout_alignParentRight="true">
	    </TextView>
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:contentDescription="@string/app_name"
        android:background="@drawable/setting_list_divider" >        
    </ImageView>
    
    <RelativeLayout 
        android:layout_width="900px"
        android:layout_height="75px"        
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/txt3"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/white_color"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        android:text="@string/tcl_android_version" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt4"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"  
   			android:layout_weight="1"
   			android:visibility="invisible"
	        android:layout_marginTop="22.5px" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt_android_version"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/text_unfocus"
	        android:textSize="13.5sp"
	        android:layout_alignParentRight="true">
	    </TextView>
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:contentDescription="@string/app_name"
        android:background="@drawable/setting_list_divider" >        
    </ImageView>    
    
	<RelativeLayout 
        android:layout_width="900px"
        android:layout_height="75px"        
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/txt7"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/white_color"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        android:text="@string/tcl_software_version" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt8"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"  
   			android:layout_weight="1"
   			android:visibility="invisible"
	        android:layout_marginTop="22.5px" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt_software_version"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"       
	        android:layout_marginTop="22.5px" 
	        android:textColor="@color/text_unfocus"
	        android:textSize="13.5sp"
	        android:layout_alignParentRight="true">
	    </TextView>
    </RelativeLayout>

	<ImageView 
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:contentDescription="@string/app_name"
        android:background="@drawable/setting_list_divider" >        
    </ImageView>
    
	<RelativeLayout 
        android:layout_width="900px"
        android:layout_height="75px"        
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/txt9"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/white_color"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        android:text="@string/tcl_MAC_address" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt10"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"  
   			android:layout_weight="1"
   			android:visibility="invisible"
	        android:layout_marginTop="22.5px" >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/txt_MAC_address"
	        android:layout_width="wrap_content"
	        android:layout_height="75px"        
	        android:layout_marginTop="22.5px"
	        android:textColor="@color/text_unfocus"
	        android:textSize="13.5sp"
	        android:layout_alignParentRight="true">
	    </TextView>
    </RelativeLayout>

	<ImageView 
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:contentDescription="@string/app_name"
        android:background="@drawable/setting_list_divider" >        
    </ImageView>
        
    </LinearLayout>

    
        

</LinearLayout>