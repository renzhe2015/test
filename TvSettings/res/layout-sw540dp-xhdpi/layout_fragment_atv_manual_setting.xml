<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Pane.ATVManual"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="vertical" 
    android:background="@drawable/dialog_tv_tunning_background">

    <TextView
        style="@style/Widget.Tv.TextView.Title"
        android:gravity="center_vertical|center_horizontal"
        android:shadowColor="#FB3C3F3B"
        android:singleLine="false"
        android:text="@string/STRING_CHANNEL_SETTING" />

    <LinearLayout
        android:id="@+id/container_atv_tuning_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:baselineAligned="true"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pane_padding_half"
        android:paddingLeft="@dimen/pane_padding"
        android:paddingRight="@dimen/pane_padding"
        android:paddingTop="@dimen/pane_padding_half" >

        <LinearLayout
            android:id="@+id/option_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusLeft="@+id/option_label7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cur_chan"
                style="@style/Widget.Tv.TextView.AtvTuing.Item.Title"
                android:text="@string/tcl_chan_set_cur_chan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector_left" />
         
            <TextView
                android:id="@+id/text_option"
                style="@style/Widget.Tv.TextView.AtvTuing.Item"
                android:text="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector" />

            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_sound_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sound_system"
                style="@style/Widget.Tv.TextView.AtvTuing.Item.Title"
                android:text="@string/STRING_SOUND_SYSTEM" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector_left" />
            
            <TextView
                style="@style/Widget.Tv.TextView.AtvTuing.Item"
                android:text="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal" >
			<TextView
			    android:id="@+id/color_system"
                style="@style/Widget.Tv.TextView.AtvTuing.Item.Title"
                android:text="@string/STRING_COLOR_SYSTEM" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector_left" />
            			
            <TextView
                style="@style/Widget.Tv.TextView.AtvTuing.Item"
                android:text="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_fine_tune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/frequency"
                style="@style/Widget.Tv.TextView.AtvTuing.Item.Title"
                android:text="@string/STRING_MANUAL_FINE_TUNING_FREQ" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector_left" />
                        
            <TextView
                style="@style/Widget.Tv.TextView.AtvTuing.Item"
                android:text="@null"
                android:paddingLeft="5px"
                android:gravity="center_vertical|left" />
            
            <TextView
                style="@style/Widget.Tv.TextView.AtvTuing.Item.ext"
                android:text="@string/tcl_atv_manual_freq_unit"
                android:layout_marginLeft="-187px" 
                android:paddingRight="5px"               
                android:gravity="center_vertical|right" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_item_setting_down_selector" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>